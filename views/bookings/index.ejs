<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Bookings</title>
</head>
<body>
    <%- include('../partials/header') %>

    <h1>All Bookings</h1>
    
    <table>
      <thead>
        <tr>
          <th>DJ Name</th>
          <th>Client Name</th>
          <th>Event Date</th>
          <th>Location</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.dj_id.username %></td>
            <td><%= booking.client_id.username %></td>
            <td><%= booking.event_date.toDateString() %></td>
            <td><%= booking.location %></td>
            <td><%= booking.status %></td>
            <td>
              <a href="/bookings/<%= booking._id %>">View</a> |
              <a href="/bookings/<%= booking._id %>/edit">Edit</a> |
              <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    
    <%- include('../partials/footer') %>
    
</html>